<h2>Galpões</h2>

<div class="row">
<% unless @warehouses.nil? %>
  <% if @warehouses.empty? %>
    <div class="row">
      <strong style="color:red;">Nenhum galpão cadastrado</strong>
    </div>
  <% else %>
    <div class="list-group">
      <% @warehouses.each do |warehouse| %>
        <a href="/warehouses/<%= warehouse.id %>" class="list-group-item list-group-item-action d-flex gap-3 py-3" aria-current="true">
          <i class="fas fa-warehouse rounded-circle flex-shrink-0" style="font-size:2rem;padding-top:0.2rem"></i>
          <div class="d-flex gap-2 w-100 justify-content-between">
            <div>
              <h6 class="mb-0"><%= warehouse.name%></h6>
              <p class="mb-0 opacity-75"><%= warehouse.code %></p>
            </div>
            <small class="opacity-50 text-nowrap" style="padding-top:0.5rem"><%= warehouse.id %></small>
          </div>
        </a>
      <% end %>
    </div>
  <% end %>
<% end %>
</div>